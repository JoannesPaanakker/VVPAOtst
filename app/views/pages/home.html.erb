<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-xs-12 col-md-6 home-box">
      <div class="home-inner-box">
        <div class="inner-box-large">
          <div class="header1">  <%= @texts[0].name  %></div>
          <div class="text-box-l">
            <%= @texts[0].text %>
          </div>
          <%= link_to "meer info", informatie_path, class: "knop knop-linksonder-home-inner-box" %>
        <!-- <div class="knop knop-linksonder">meer</div> -->
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-6 home-box">
      <div class="home-inner-box">
        <div class="inner-box" style="position: relative;">
          <div class="header2">Psychiaters</div>
          <div class="text-box-m">
            Hier kunt u zoeken naar Psychiaters die zijn aangesloten bij de VVPAO Amsterdam.
          </div>
          <%= link_to "Vind psychiater", psychiaters_path, class: "knop knop-linksonder-home-inner-box" %>
        </div>
        <div class="inner-box" style="position: relative;">
          <div class="header2">Lidmaatschap</div>
          <div class="text-box-m">
            Lid worden van de VVPAO kan wanneer men vrijgevestigd psychiater is, binnen, maar ook buiten Amsterdam, zich ooit vrij wil vestigen (dus elke psychiater die het overweegt) of in opleiding is tot psychiater.
          </div>
        <%= link_to "lidmaatschap", lidmaatschap_path, class: "knop knop-linksonder-home-inner-box" %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-6 home-box">
      <div class="home-inner-box">
        <div class="inner-box">
          <div class="header2">Nascholing</div>
          <ul>
            <%= render 'partials/list-trainings' %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-6 home-box">
      <div class="home-inner-box">
          <div class="header2">Nieuws</div>
          <% @newsitems.each do |ni| %>
            <div class="news-item-index">

                <%= image_tag ni.imagefilename1, class: "news-item-image"   %>

              <div class="news-item-title">
                <%= ni.title  %>
              </div>
              <% if user_signed_in? && current_user.admin %>
                <div class="knop-small" data-toggle="modal" data-target="#editNewsitem">
                  Pas aan
                </div>
                <!-- Edit modal -->
                <div class="modal" id="editNewsitem" tabindex="-1" role="dialog" aria-labelledby="editNewsitemLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="editNewsitemLabel">Pas newsitem aan</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <% @newsitem = ni %>
                        <%= render 'partials/edit-newsitem' %>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="knop" data-dismiss="modal">annuleer</button>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
