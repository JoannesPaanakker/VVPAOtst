<%= simple_form_for(@user, url: user_path(@user), html: { method: :put }, wrapper: :horizontal_form) do |f| %>

  <div class="form-inputs">
    <%= f.input :personal_data_public, label: "Peroonlijke gegevens zichtbaar voor publiek", required: false  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Bewaar", class: "knop" %>
  </div>
<% end %>
