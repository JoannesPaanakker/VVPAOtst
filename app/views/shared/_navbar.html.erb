<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>
  <div class="hidden-xs">
    <div class="dropdown">
      <p class="dropdown-toggle navbarlink" data-toggle="dropdown">Algemeen</p>
      <ul class="dropdown-menu dropdown-menu-left navbar-dropdown-menu">
        <li>
          <%= link_to "Over VVPAO", informatie_path, class: "" %>
        </li>
        <li>
          <%= link_to "Bestuur", informatie_path(:anchor => "bestuur"), class: "" %>
        </li>
        <li>
          <%= link_to "Links", informatie_path(:anchor => "links"), class: "" %>
        </li>
        <li>
          <%= link_to "Klachten", "klachten", class: "" %>
        </li>
      </ul>
    </div>
  </div>
  <div class="hidden-xs">
    <%= link_to "Contact", contact_path, class: "navbarlink" %>
  </div>
  <div class="hidden-xs">
    <%= link_to "Psychiaters", psychiaters_path, class: "navbarlink" %>
  </div>
  <div class="hidden-xs">
    <%= link_to "Lidmaatschap", lidmaatschap_path, class: "navbarlink" %>
  </div>
  <div class="hidden-xs">
    <%= link_to "Nascholing", nascholing_path, class: "navbarlink" %>
  </div>
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? && current_user.member %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">

          <% if current_user.profile_image_filename %>
            <%= image_tag current_user.profile_image_filename, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= image_tag "user-default.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to users_path do %>
                <i class="fas fa-list-ul"></i> Leden index
              <% end %>
            </li>
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profielpagina") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "edit") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle fa-size" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

